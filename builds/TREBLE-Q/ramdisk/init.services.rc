on early-init

on boot
    start nuke
 
on property:sys.boot_completed=1
    start kernelinit
    stop secure_storage
    stop irisd

# setprop persist.sys.ui.hw true

service kernelinit /sbin/ts-kernel.sh
    class late_start
    user root
    seclabel u:r:init:s0
    oneshot
    disabled
    
service nuke /vendor/etc/nuke.sh
    user root
    seclabel u:r:init:s0
    oneshot
    disabled

